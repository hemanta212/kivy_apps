#;kivy 1.10.1

<BaseWidget>:
    input_url: input_url
    output_box: output_text

    GridLayout:
        rows: 1
        cols: 2
        padding: 10
        width: root.width
        height: root.height * 0.15
        center_y: root.height - self.height /2
        Label:
            text : "URL"
            size_hint_x: 0.2
        TextInput:
            id: input_url
            text: "github.com"
            multiline: False

    GridLayout:
        rows: 2
        cols: 4
        width: root.width
        height: root.height * 0.15
        center_y: root.height - self.height * 1.5
        padding: 10
        spacing: 5
        Button:
            id: button_get
            text : "GET"
            size_hint_x: 0.2
            on_release: root.perform_http_request(self.text)
        Button:
            id: button_post
            text: "POST"
            size_hint_x: 0.2
            on_release: root.perform_http_request(self.text)
        Button:
            id: button_post
            text: "PUT"
            size_hint_x: 0.2
            on_release: root.perform_http_request(self.text)
        Button:
            id: button_post
            text: "PATCH"
            size_hint_x: 0.2
            on_release: root.perform_http_request(self.text)
        Button:
            id: button_post
            text: "DELETE"
            size_hint_x: 0.2
            on_release: root.perform_http_request(self.text)


    GridLayout:
        rows: 1
        cols: 1
        padding: 10
        width: root.width
        height: root.height * 0.7
        center_y: root.height - root.height / 1.53
        TextInput:
            id: output_text
            text: ""
            multiline: True
